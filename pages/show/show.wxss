.page__section > .body {
    margin: 16rpx 0;
}

.container-attendees {
    display: flex;
}

.container-attendees > .attendee {
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
    margin-right: 32rpx;
    position: relative;
    /* overflow: unset; */
}

.icon-complete {
    position: absolute; 
    top: -16rpx;
    right: -16rpx;
    height: 64rpx;
    width: 64rpx;
    z-index: 10;
}

.container-attendees > .creator {
    padding-right: 32rpx;
    border-right: 1px solid black;
}

.container-attendees > .completed {
    border: 3px solid green;
}

.container-tabbar {
    padding: 32rpx 0;
    display: flex;
    /* justify-content: center; */
    align-items: center;
}

.container-tabbar > .tab {
    margin: 0 32rpx;
    width: 50%;
    text-align: center;
}

.container-tabbar > .active {
    padding: 16rpx 0;
    border-bottom: 1px solid black;
    box-sizing: border-box;
}

.container-description {
    min-height: 320rpx;
    box-sizing: border-box;
    padding: 16rpx 0;
    color: rgba(0,0,0,0.8);
}

.container-btns {
    width: 100%; 
    height: 240rpx;
    display: flex;
    align-items: center;
    background: #FFFFFF;
    border-top: 1px solid gray;
    padding: 0 32rpx;
    box-sizing: border-box;
    justify-content: center;
}

.container-border-bottom {
    width: 32%;
    height: 2rpx;
    background: black;
    border-radius: 2rpx;
    position: absolute; 
    left: 11%;
}