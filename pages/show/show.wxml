<view class="page__container">
    <view 
    class="container-header" 
    style="background-image: linear-gradient(0deg, rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('{{illustrations[workout.category]}}')">
        <view>{{workout.name}}</view>
        <image bindtap="navigateHome" class="btn-back" src="../../icons/home.svg"/>
    </view>

    <view class="container-info">
        <view class="flex">
            <image class="icon" src="/icons/time.png"/>
            <view class="text">{{workout.time}}</view>
        </view>
        <view class="flex margin-32">
            <image class="icon" src="/icons/date.png"/>
            <view class="text">{{workout.date}}</view>
        </view>
        <view class="flex" bindtap="openLocation">
            <image class="icon" src="/icons/location.png"/>
            <view class="text">{{workout.location.address}}</view>
        </view>
    </view>

    <view class="container-info">
        <view class="title">WHO'S GOING</view>
        <view class="box-avatars">
            <image class="avatar" src="{{workout.created_by.avatar}}"/>
            <view class="line-vertical"/>
            <block wx:for="{{attendees}}" wx:for-item="attendee">
                <image wx:if="{{attendee.user.id != workout.created_by.id}}" class="avatar" src="{{attendee.user.avatar}}"/>
            </block>
        </view>
    </view>

    <image bindtap="animateToggleSize" animation="{{animation.toggleSize}}" class="container-info container-image" mode="aspectFill" src="{{workout.image.path}}"/>

    <view class="container-info">
        <view class="area-description">
            {{workout.description}}
        </view>
    </view>

    <view class="container-btn">
        <button class="btn btn-share" style="background-image: url({{illustrations[workout.category]}})" open-type="share">SHARE</button>
        <view wx:if="{{!user.is_attending && user.id != workout.created_by.id}}" class="btn btn-primary" bindtap="createAttendee">JOIN</view>
        <view wx:if="{{user.is_attending && user.id != workout.created_by.id}}" class="btn btn-cancel" bindtap="removeAttendee">CANCEL</view>
    </view>
</view>