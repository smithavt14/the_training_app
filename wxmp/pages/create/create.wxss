.page__container {
    padding-top: 232rpx;
    padding-bottom: 232rpx;
}

.input-container {
    background: white;
    margin: 32rpx 0;
    padding: 32rpx 32rpx;
    box-sizing: border-box;
    border-radius: 4px; 
    box-shadow: 4px 4px 32px rgba(44, 83, 100, 0.25);
    display: flex;
    align-items: center;
    font-size: 14px;
}

.container-image {
    padding: 0;
    box-sizing: border-box;
    height: 256rpx;
    width: 100%;
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    color: white;
    font-weight: bold;
}

.input-container > .icon {
    height: 48rpx;
    width: 48rpx;
    flex-shrink: 0;
    padding-right: 16rpx;
}

.input-container > .input {
    flex-grow: 1;
    flex-shrink: 0;
}

.section > .input {
    flex-grow: 1;
    flex-shrink: 0;
}

.input-container > .section {
    display: flex;
    align-items: center;
    padding: 16rpx 0rpx;
    box-sizing: border-box;
    flex-shrink: 0;
}

.input-container > .section > .icon {
    height: 48rpx;
    width: 48rpx;
    flex-shrink: 0;
    padding-right: 16rpx;
}

.input-textarea {
    width: unset;
}